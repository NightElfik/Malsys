% ======================================================================================================================
% ======================================================================================================================
\section{Interfaces}

@foreach (var comp in interfaces) {
	@:
	@:% ======== @comp.Metadata.ComponentType.Name =====================================================================
	Html.RenderPartial(MVC.Help.Predefined.Views.ComponentLatexPartial, comp);
}