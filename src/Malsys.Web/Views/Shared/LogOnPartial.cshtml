
@if (Request.IsAuthenticated) {
	if (User.IsInRole(UserRoles.ViewStats)) {
		@Html.ActionLink("Statistics", MVC.Administration.Stats.Index()) @:|
	}
	if (User.IsInRole(UserRoles.Administrator)) {
		@Html.ActionLink("Administration", MVC.Administration.Home.Index()) @:|
	}

	@Html.ActionLink("Saved inputs", MVC.Gallery.Index(user: User.Identity.Name))
	@:|
	<b>@Html.ActionLink(User.Identity.Name, MVC.User.Index())</b>
	@:[ @Html.ActionLink("Log Off", MVC.Authentication.LogOff()) ]
}
else {
	@:[ @Html.ActionLink("Log On", MVC.Authentication.LogOn()) ]
}
