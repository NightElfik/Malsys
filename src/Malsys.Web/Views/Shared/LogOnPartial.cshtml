
@if (Request.IsAuthenticated) {
	@Html.ActionLink("Saved inputs", MVC.Gallery.Index(user: User.Identity.Name))
	@:|
	<b>@Html.ActionLink(User.Identity.Name, MVC.User.Index())</b>
	@:[ @Html.ActionLink("Log Off", MVC.Authentication.LogOff()) ]
}
else {
	@:[ @Html.ActionLink("Log On", MVC.Authentication.LogOn()) ]
}
