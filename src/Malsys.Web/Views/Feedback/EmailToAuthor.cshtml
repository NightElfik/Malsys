@model string

@{
	ViewBag.Title = "Email to author";
}

<h1>Email to author</h1>

<div class="grid-100 mobile-grid-100 grid-parent hideLinks">
	<div class="grid-50 mobile-grid-100 ">
@if (Model != null) {
	<p>
		Marek Fišer &lt;@Html.EmailLink(Model)&gt;
	</p>
}
else {
	<p>
		Feel free to contact me directly with an e-mail.
		Please solve following captcha to display the e-mail.
	</p>

	using (Html.BeginForm()) {

		@Html.ValidationSummary(true)

		@ReCaptcha.GetHtml(theme: "clean")

		<p>
			<input type="submit" value="Show e-mail" />
		</p>

	}
}
	</div>
</div>
