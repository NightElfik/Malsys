@{
	Layout = null;
	var lastMod = File.GetCreationTime(System.Reflection.Assembly.GetExecutingAssembly().Location);
	string lastmod = lastMod.ToString("yyyy-MM-dd");
}

<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

	<url>
		<loc>@Url.ActionAbsolute(MVC.Home.Index())</loc>
		<lastmod>@lastmod</lastmod>
		<changefreq>weekly</changefreq>
		<priority>0.5</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.Gallery.Index())</loc>
		<changefreq>daily</changefreq>
		<priority>0.9</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.Documentation.Home.Index())</loc>
		<lastmod>@lastmod</lastmod>
		<changefreq>monthly</changefreq>
		<priority>0.7</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.CurveDesigner.Index())</loc>
		<lastmod>@lastmod</lastmod>
		<changefreq>monthly</changefreq>
		<priority>0.6</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.Discussion.Index())</loc>
		<changefreq>daily</changefreq>
		<priority>0.8</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.DevDiary.Index())</loc>
		<lastmod>@lastmod</lastmod>
		<changefreq>monthly</changefreq>
		<priority>0.6</priority>
	</url>
	<url>
		<loc>@Url.ActionAbsolute(MVC.Feedback.Index())</loc>
		<lastmod>@lastmod</lastmod>
		<changefreq>monthly</changefreq>
		<priority>0.4</priority>
	</url>
</urlset>
