/**
 * William McWorter
 */
lsystem XBorder {

	let iterations = 3;
	set axiom =
		X Y X Y X Y X +
		X Y X Y X Y X +
		X Y X Y X Y X +
		X Y X Y X Y X;

	interpret F as DrawLine(4);
	interpret + as TurnLeft(90);
	interpret - as TurnLeft(-90);

	rewrite F to nothing;
	rewrite X to F X + F X + F X F Y - F Y -;
	rewrite Y to + F X + F X F Y - F Y - F Y;

	process with SvgRenderer;

}
</pre>
